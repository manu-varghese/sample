<div class="container-fluid bg">
    <div class="row justify-content-center p-5">
        <div class="col-12 col-sm-6 col-md3 col-lg-3 border border-2  border-warning">
            <h1>Admin Login</h1><br>
            <form action="/admin/adminLogin" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="Email" class="form-control" name="email" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="Enter Email" required
                        pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$">

                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1"
                        placeholder="Password" minlength="3" required pattern="\S(.*\S)?">

                </div><br>

                <button type="submit" class="btn btn-warning text-center ">Login</button><br><br>
                {{#if adminLoginError}}
                <p style="color: red;">Invalid username or password</p>
                {{/if}}
                <div>
                </div>
            </form>
        </div>
    </div>


</div>