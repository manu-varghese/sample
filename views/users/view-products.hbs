<section>
        <div class="container">
            <div class="row">
                {{#each products}}
                <div class="card me-3 mt-5" style="width: 14rem;">
                    <img src="{{this.image}}" width="100" class="ms-5 mt-3"  alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p>{{this.price}}</p>
                        <a href="#" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

    </section>